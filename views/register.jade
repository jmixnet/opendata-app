extends layout

block content
  div
    form(action='/register',method='post')
      span ユーザー名：
      input(type='text',name='username')
      br
      span パスワード：
      input(type='password',name='password')
      br
      button(type='submit') ユーザ登録
      br
      if message
        p(class='error') #{message}
      a(href='/') 戻る
